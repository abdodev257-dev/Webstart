      const text = document.getElementById('textToHide').value + '|||'; // Ù†Ù‡Ø§ÙŠØ© Ø§Ù„Ù†Øµ
      if (!file || !text) return alert("ÙŠØ±Ø¬Ù‰ Ø§Ø®ØªÙŠØ§Ø± ØµÙˆØ±Ø© ÙˆØ¥Ø¯Ø®Ø§Ù„ Ù†Øµ.");

